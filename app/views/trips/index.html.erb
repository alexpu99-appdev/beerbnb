<div>
  <div>
    <h1 >
      Want to save this Beerbnb?
    </h1>
  </div>
</div>

<hr>

<!-- Equal width cols, same on all screen sizes -->
<div class="container">
  <div class="row">
    <div class="col">
        <p style="text-align:center;"><img style="max-width: 450px; max-height: 300px" src="<%= @beerbnb_air.photo %>" alt="airbnb.img"></p>
    </div>
    <div class="col">
        <p style="text-align:center;"><img style="max-width: 450px; max-height: 300px" src="<%= @beerbnb_bar.photo %>" alt="bar.img"></p>
    </div>
  </div>
  <div class="row">
    <div class="col">
          <p style="text-align:left;">Price: $<%= @beerbnb_air.price %>0 </p>
    </div>
    <div class="col">
          <p style="text-align:left;">Name: <%= @beerbnb_bar.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col">
          <p style="text-align:left;"> Location: <%= @beerbnb_air.location %> </p>
    </div>
    <div class="col">
          <p style="text-align:left;"> Location: <%= @beerbnb_bar.location %></p>
    </div>
  </div>
  <div class="row">
    <div style="text-align:left;" class="col">
      <a href="<%= @beerbnb_air.website %>" target="_blank" > Airbnb Details </a>
    </div>
    <div style="text-align:left;" class="col">
      <a href="<%= @beerbnb_bar.website %>" target="_blank" > Bar Details </a>
    </div>
  </div>
</div>

<hr>

<br>
<div class="container">
  <div class="row">
    <div style="text-align:right;" class="col">
      <a href ="/beerme">
        <button type="button" class="btn btn-danger">
          No
        </button>
      </a>
    </div>
    <div class="col">
      <form action="/insert_liked_trip" method="post">
        <button type="submit" class="btn btn-success">
          <input type = "hidden" id= "user_id" name = "query_trip_id" value = "<%= @beerbnb.id %>" />
          Yes
        </button>
      </form>
    </div>
  </div>
</div>
