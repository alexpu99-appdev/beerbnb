<div>
  <div>
    <h1>
      List of all liked trips
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new liked trip
    </h2>

    <form action="/insert_liked_trip" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="trip_id_box">
          Trip
        </label>

        <input type="text" id="trip_id_box" name="query_trip_id">
      </div>

      <button>
        Create liked trip
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Trip
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_liked_trips.each do |a_liked_trip| %>
      <tr>
        <td>
          <%= a_liked_trip.id %>
        </td>

        <td>
          <%= a_liked_trip.user_id %>
        </td>

        <td>
          <%= a_liked_trip.trip_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_liked_trip.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_liked_trip.updated_at) %> ago
        </td>

        <td>
          <a href="/liked_trips/<%= a_liked_trip.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
